mixin input(option)
    if option.type === 'email-and-submit'
        .input-email-and-submit-container
            input(type="email", name="", placeholder="Email", required, value="").text_style_usual-black.input-email_submit
            input(type="submit", value="").input-submit_email
    else if option.type === 'date'
        input(type="text" required placeholder="ДД.ММ.ГГГГ").input_type_date.has-datepicker
    else if option.type === 'submit' 
        input(type="submit" value=option.text).input-submit
    else if option.type === 'email'
        input(type="email", name="", placeholder="Email", required, value="").text_style_usual-black.input-email
    else if option.type === 'password'
        input(type="password", name="", placeholder="Password", required, value="").text_style_usual-black.input-password
    else if option.type === 'text'
        input(type="text" placeholder=option.text required).input-text
    else if option.type === 'toggle'
        .toggle-container
            input(type="checkbox" id=option.id).input-toggle
            label(for=option.id).toggle-label
                .label-content= option.text